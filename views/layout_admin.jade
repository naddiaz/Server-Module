doctype html
html
  head
    title #{__("web.title")}
    meta(charset='utf-8' name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href="/css/material-design-color-palette.css")
    link(rel='stylesheet' href="/css/pace.css")
    link#bootstrap-style(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/bootstrap-responsive.min.css', rel='stylesheet')
    link#base-style(href='/css/style.css', rel='stylesheet')
    link(href='/css/multi-select.css', rel='stylesheet')
    link#base-style-responsive(href='/css/style-responsive.css', rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic-ext,latin-ext', rel='stylesheet', type='text/css')
    link(rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css")

    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
      link#ie-style(href='/css/ie.css', rel='stylesheet')
    //if IE 9
      link#ie9style(href='/css/ie9.css', rel='stylesheet')
    block links
  body.mdc-bg-green
    .navbar
      .navbar-inner.mdc-bg-grey-600
        .container-fluid
          a.btn.btn-navbar(data-toggle='collapse', data-target='.top-nav.nav-collapse,.sidebar-nav.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/index')
            span #{__("web.title")}
          .nav-no-collapse.header-nav
            ul.nav.pull-right
              li.dropdown
                a.btn.dropdown-toggle(data-toggle='dropdown', href='#')
                  i.halflings-icon.white.user
                  span#login-name
                  span.caret
                ul.dropdown-menu
                  li.dropdown-menu-title
                    span= __("home.more_options")
                  li
                    a(href='/')
                      i.halflings-icon.off
                      = __("home.logout")
    .container-fluid-full
      .row-fluid
        #sidebar-left.span2
          .nav-collapse.sidebar-nav
            ul.nav.nav-tabs.nav-stacked.main-menu
              li
                a(href='/index?name=#{admin.name}&id=#{admin.id}')
                  i.fa.fa-home
                  span.hidden-tablet= __("home.index")
              block menu_options
              li
                a(href='/help?name=#{admin.name}&id=#{admin.id}')
                  i.fa.fa-question
                  span.hidden-tablet=  __("home.help")
              block menu_options_help
        #content.span10
          block breadcrumb
            //          ul.breadcrumb
          .mdc-bg-green
            block content

