extends layout_admin
      
block content
  .container-fluid(ng-controller="MapCtrl as map")
    ol.breadcrumb
      li
        a(href="/admin") Inicio
      li.active Localizaciones
    .row
      .col-xs-12.col-md-6
        .panel.panel-info
          .panel-heading
            h1 Localizaciones
          .panel-body
            table.table
              tr
                th ID Persona
                th ID Beacon
                th Fecha
              - each locale in localization
                tr
                  td= locale.id_person
                  td= locale.id_beacon
                  td= locale.date
              