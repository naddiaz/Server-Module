extends layout_admin

block links
  link(rel='stylesheet' href="/css/history.css")
  link(rel='stylesheet' href="/css/magnific-popup.css")

block scripts
  script(type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyA5X8YsmAwkfl6i-QnAGSXPJOLaY52ANsM&sensor=false")
  script.
    ID_INSTALLATION = "#{id_installation}"

  script(src='/js/moment-with-locales.js')
  script(src="/scripts/control/tabs.js")
  script(src='/scripts/control/employees.js')
  script(src='/scripts/control/assigned.js')
  script(src='/scripts/control/active.js')
  script(src='/scripts/control/completed.js')
  script(src='/scripts/control/paused.js')
  script(src='/scripts/control/canceled.js')
  script(src='/scripts/control/noassigned.js')
  script(src='/scripts/control/panels.js')
  script(src='/js/jquery.magnific-popup.min.js')

block breadcrumb
  ul.breadcrumb
    li
      i.fa.fa-home
      a(href='/index')= __("home.index")
      i.fa.fa-angle-right
    li 
      | #{id_installation}
      i.fa.fa-angle-right
    li
      i.fa.fa-gear
      = __("home.control_panel")

block menu_options
  include single_menu.jade

block content
  .stats
    button(title=__("control.refresh"))#tabs-refresh
      i.fa.fa-refresh
  ul.nav.nav-tabs#tabs
    li.tab.blue.active#tabEmployees
      a(href='#')= __("tab.employees")
        .badge.grey.margin-left 0
    li.tab.red#tabNoAssign
      a(href='#')= __("tab.noAssign")
        .badge.grey.margin-left 0
    li.tab.yellow#tabAssigned
      a(href='#')= __("tab.assigned")
        .badge.grey.margin-left 0
    li.tab.green#tabActive
      a(href='#')= __("tab.active")
        .badge.grey.margin-left 0
    li.tab.yellow#tabPaused
      a(href='#')= __("tab.paused")
        .badge.grey.margin-left 0
    li.tab.blue#tabCompleted
      a(href='#')= __("tab.completed")
        .badge.grey.margin-left 0
    li.tab.red#tabCanceled
      a(href='#')= __("tab.canceled")
        .badge.grey.margin-left 0
  .row-fluid.contentTab
    .span12#contentEmployees
      .box-header
        h3
          = __("tab.employees")
      .box-content
        table.table.table-bordered.table-responsive.flexy
          thead
            tr
              th= __("control.employees.table.history")
              th= __("control.employees.table.id")
              th= __("control.employees.table.name")
              th= __("control.employees.table.category")
              th= __("control.employees.table.tasks.assigned")
              th= __("control.employees.table.tasks.active")
              th= __("control.employees.table.tasks.paused")
              th= __("control.employees.table.tasks.completed")
              th= __("control.employees.table.tasks.canceled")
              th= __("control.employees.table.tasks.timeTotal")
          tbody#employees_state
  .row-fluid.contentTab
    .span12.hide#contentAssigned
      .box-header.yellow
        h3
          = __("tab.content.assigned")
      .box-content
        table.table.table-bordered.table-responsive.flexy
          thead
            tr
              th= __("control.activities.table.actions")
              th= __("control.activities.table.identifier")
              th= __("control.activities.table.employee")
              th= __("control.activities.table.register")
              th= __("control.activities.table.time")
          tbody#works_assigned
  .row-fluid.contentTab
    .span12.hide#contentActive
      .box-header.green
        h3
          = __("tab.content.active")
      .box-content
        table.table.table-bordered.table-responsive.flexy
          thead
            tr
              th= __("control.activities.table.actions")
              th= __("control.activities.table.identifier")
              th= __("control.activities.table.employee")
              th= __("control.activities.table.register")
              th= __("control.activities.table.time")
          tbody#works_active
  .row-fluid.contentTab
    .span12.hide#contentCompleted
      .box-header.blue
        h3
          = __("tab.content.completed")
      .box-content
        table.table.table-bordered.table-responsive.flexy
          thead
            tr
              th= __("control.activities.table.actions")
              th= __("control.activities.table.identifier")
              th= __("control.activities.table.employee")
              th= __("control.activities.table.register")
              th= __("control.activities.table.time")
          tbody#works_completed
  .row-fluid.contentTab
    .span12.hide#contentPaused
      .box-header.yellow
        h3
          = __("tab.content.paused")
      .box-content
        table.table.table-bordered.table-responsive.flexy
          thead
            tr
              th= __("control.activities.table.actions")
              th= __("control.activities.table.identifier")
              th= __("control.activities.table.employee")
              th= __("control.activities.table.register")
              th= __("control.activities.table.time")
          tbody#works_paused
  .row-fluid.contentTab
    .span12.hide#contentCanceled
      .box-header.red
        h3
          = __("tab.content.canceled")
      .box-content
        table.table.table-bordered.table-responsive.flexy
          thead
            tr
              th= __("control.activities.table.actions")
              th= __("control.activities.table.identifier")
              th= __("control.activities.table.employee")
              th= __("control.activities.table.register")
              th= __("control.activities.table.time")
          tbody#works_canceled
  .row-fluid.contentTab
    .span12.hide#contentNoAssign
      .box-header.red
        h3
          = __("tab.content.noAssign")
      .box-content
        table.table.table-bordered.table-responsive.flexy
          thead
            tr
              th= __("control.activities.table.actions")
              th= __("control.activities.table.id")
              th= __("control.activities.table.pending")
              th= __("control.activities.table.category")
              th= __("control.activities.table.priority")
              th= __("control.activities.table.description")
          tbody#tasks_nonasign

  .row-fluid.white-popup.mfp-with-anim.mfp-hide#details-popup
    .span12.box
      .box-header
        p#details-title Activity Details
      .box-content.activity-details#details-content
